{
	"name": "vHooks",
	"version": "1.0.0",
	"description": "vHooks is a tool to verify HTTP webhooks with the ability to customize responses",
	"author": "Sri Majji",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": "11.x"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"start": "yarn clean && yarn build:express && yarn build:next && node --inspect dist/Server.js",
		"start:dev": "concurrently \"yarn build:express\" \"yarn build:next\" \"nodemon --inspect dist/Server.js | bunyan\"",
		"build:express": "tsc --p tsconfig.json",
		"build:next": "next build",
		"typeorm": "yarn run clean && yarn run build:express && dotenv-extended typeorm"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"stylelintIntegration": false,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"printWidth": 120,
		"jsxBracketSameLine": true
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src"
		],
		"setupFiles": [
			"./src/tests/SearchSetup.tsx"
		]
	},
	"nodemonConfig": {
		"restartable": "rs",
		"ignore": [
			".git",
			"node_modules/**/node_modules",
			"dist/"
		],
		"include": [
			"src/**/*.ts",
			".env.defaults"
		],
		"verbose": true,
		"events": {},
		"watch": [
			"src/"
		],
		"env": {
			"NODE_ENV": "development"
		},
		"inspect": true,
		"ext": "ts json"
	},
	"dependencies": {
		"@zeit/next-typescript": "^1.1.1",
		"axios": "^0.18.0",
		"body-parser": "^1.18.3",
		"bunyan": "^1.8.12",
		"casual": "^1.6.0",
		"compression": "^1.7.4",
		"dotenv-extended": "^2.4.0",
		"express": "^4.16.4",
		"express-rate-limit": "^3.4.0",
		"express-request-id": "^1.4.1",
		"helmet": "^3.16.0",
		"morgan": "^1.9.1",
		"mysql": "^2.16.0",
		"next": "^8.0.4",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"reflect-metadata": "^0.1.13",
		"socket.io": "^2.2.0",
		"typeorm": "^0.2.16",
		"typescript": "^3.4.3"
	},
	"devDependencies": {
		"@types/body-parser": "^1.17.0",
		"@types/bunyan": "^1.8.6",
		"@types/compression": "^0.0.36",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.16.1",
		"@types/express-rate-limit": "^3.3.0",
		"@types/helmet": "^0.0.43",
		"@types/jest": "^24.0.11",
		"@types/morgan": "^1.7.35",
		"@types/next": "^8.0.3",
		"@types/node": "^11.13.4",
		"@types/react": "^16.8.13",
		"@types/react-dom": "^16.8.4",
		"@types/socket.io": "^2.1.2",
		"concurrently": "^4.1.0",
		"nodemon": "^1.18.11",
		"tslint": "^5.15.0"
	}
}